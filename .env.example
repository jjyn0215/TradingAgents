# LLM Providers (set the one you use)
OPENAI_API_KEY=
GOOGLE_API_KEY=
ANTHROPIC_API_KEY=
XAI_API_KEY=
OPENROUTER_API_KEY=

# Discord Bot
DISCORD_BOT_TOKEN=
# 봇이 동작할 채널 ID (쉼표로 여러 개 지정, 비워두면 모든 채널에서 동작)
# 채널 ID 확인: Discord 개발자 모드 켜고 → 채널 우클릭 → "채널 ID 복사"
# DISCORD_CHANNEL_IDS=123456789012345678,987654321098765432

# 한국투자증권 API (모의투자/실전 모두 지원)
# 발급: https://apiportal.koreainvestment.com → API신청 → 앱키 발급
KIS_APP_KEY=
KIS_APP_SECRET=
KIS_ACCOUNT_NO=12345678-01
KIS_VIRTUAL=true
# 수동(/분석, /대형주) 1회 매수 예산 상한 (원)
KIS_MAX_ORDER_AMOUNT=1000000

# ─── 미국(US) 거래 설정 ───────────────────────────────────────
# 미국 자동주문 기능 활성화 (기본: false)
ENABLE_US_TRADING=false
# 수동(/분석) 1회 매수 예산 상한 (USD)
US_MAX_ORDER_AMOUNT=5000
# 해외 종목 거래소 탐색 순서
US_EXCHANGE_SEARCH_ORDER=NASD,NYSE,AMEX
# KIS 해외 랭킹 API 실패 시 yfinance fallback 종목군
US_WATCHLIST=AAPL,MSFT,NVDA,AMZN,GOOGL,META,TSLA,AMD,AVGO,QQQ,SPY

# ─── 데이 트레이딩 설정 ───────────────────────────────────
# 매일 매수할 종목 수 (기본: 5)
DAY_TRADE_PICKS=5
# 자동 매수 시각 (KST, HH:MM) — 기본: 09:30 (스코어링→AI분석→매수)
AUTO_BUY_TIME=09:30
# 자동 매도 시각 (KST, HH:MM) — 기본: 15:20
AUTO_SELL_TIME=15:20

# ─── 미국 데이 트레이딩 설정 (뉴욕시간 ET) ────────────────────
# 매일 매수할 종목 수 (기본: 5)
US_DAY_TRADE_PICKS=5
# 자동 매수 시각 (ET, HH:MM) — 기본: 09:35
US_AUTO_BUY_TIME=09:35
# 자동 매도 시각 (ET, HH:MM) — 기본: 15:50
US_AUTO_SELL_TIME=15:50

# ─── (선택) KIS 미국 API 엔드포인트/TR ID 오버라이드 ──────────
# KIS_US_BALANCE_PATH=/uapi/overseas-stock/v1/trading/inquire-balance
# KIS_US_BALANCE_TR_ID=VTTT3012R
# KIS_US_PRICE_PATH=/uapi/overseas-price/v1/quotations/price
# KIS_US_PRICE_TR_ID=HHDFS00000300
# KIS_US_ORDER_PATH=/uapi/overseas-stock/v1/trading/order
# KIS_US_BUY_TR_ID=VTTT1002U
# KIS_US_SELL_TR_ID=VTTT1001U
# KIS_US_VOLUME_RANK_PATH=
# KIS_US_VOLUME_RANK_TR_ID=

# ─── 손절/익절 설정 ────────────────────────────────────────
# 손절 라인 (%, 음수) — 기본: -5%
STOP_LOSS_PCT=-5.0
# 익절 라인 (%, 양수) — 기본: 10%
TAKE_PROFIT_PCT=10.0
# 모니터링 간격 (분) — 기본: 30분
MONITOR_INTERVAL_MIN=30

# (Optional) LLM model overrides for Discord bot
# DEEP_THINK_LLM=gemini-3-flash-preview
# QUICK_THINK_LLM=gemini-3-flash-preview
# MAX_DEBATE_ROUNDS=1
